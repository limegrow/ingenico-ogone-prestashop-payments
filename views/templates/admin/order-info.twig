{% extends '@Modules/ingenico_epayments/views/templates/admin/card.html.twig' %}

{% block card_title %}
    {{ 'ingenico.payment.info'|trans }}
{% endblock %}

{% block card_body %}
    {% include '@Modules/ingenico_epayments/views/templates/admin/order-actions-modal.twig' %}

    <div id="ingenico_order_info">
        <table class="table table-responsive">
            {% if pay_id %}
            <tr>
                <td>{{ 'order.payid'|trans({}) }} </td>
                <td>{{ pay_id }} </td>
            </tr>
            {% endif %}

            {% if pay_id_sub %}
            <tr>
                <td>{{ 'order.payidsub'|trans({}) }} </td>
                <td>{{ pay_id_sub }} </td>
            </tr>
            {% endif %}

            {% if payment_method %}
            <tr>
                <td>{{ 'order.payment_method'|trans({}) }} </td>
                <td>{{ payment_method }} </td>
            </tr>
            {% endif %}

            {% if status %}
            <tr>
                <td>{{ 'order.status'|trans({}) }} </td>
                <td>{{ status }} </td>
            </tr>
            {% endif %}

            {% if brand %}
            <tr>
                <td>{{ 'order.brand'|trans({}) }} </td>
                <td>{{ brand }} </td>
            </tr>
            {% endif %}

            {% if card_no %}
            <tr>
                <td>{{ 'order.card_no'|trans({}) }} </td>
                <td>{{ card_no }} </td>
            </tr>
            {% endif %}

            {% if cn %}
            <tr>
                <td>{{ 'order.customer_name'|trans({}) }} </td>
                <td>{{ cn }} </td>
            </tr>
            {% endif %}
        </table>
    </div>
{% endblock %}